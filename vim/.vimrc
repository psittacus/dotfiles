set nu rnu
set linebreak
set showbreak=+++
set showmatch

set mouse-=a

set hlsearch
set smartcase
set ignorecase
set incsearch

set ts=8 softtabstop=0 expandtab shiftwidth=4 smarttab
set autoindent

syntax on

set undolevels=1000
set backspace=indent,eol,start

set pastetoggle=<F2>

colorscheme dark_eyes
